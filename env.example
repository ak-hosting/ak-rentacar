# Bursa Oto Kiralama - SMTP Ayarları
# Bu dosyayı .env olarak kopyalayıp gerçek değerlerinizi girin

# SMTP Sunucu Ayarları
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Bursa Oto Kiralama
SMTP_FROM_EMAIL=info@bursarentacar.com

# Veritabanı Ayarları (Opsiyonel)
DB_HOST=localhost
DB_NAME=bursa_rentacar
DB_USER=root
DB_PASSWORD=your-database-password

# API Anahtarları (Opsiyonel)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Ödeme Sistemi (Opsiyonel)
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
PAYTR_MERCHANT_ID=your-paytr-merchant-id
PAYTR_MERCHANT_KEY=your-paytr-merchant-key
PAYTR_MERCHANT_SALT=your-paytr-merchant-salt

# WhatsApp API (Opsiyonel)
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=905554440123

# Analytics (Opsiyonel)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Güvenlik
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key

# Dosya Yükleme
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
UPLOAD_PATH=uploads/

# Cache Ayarları
CACHE_DRIVER=file
CACHE_TTL=3600

# Log Ayarları
LOG_LEVEL=info
LOG_FILE=logs/app.log

# E-posta Şablonları
EMAIL_TEMPLATE_RESERVATION=emails/reservation.html
EMAIL_TEMPLATE_CONFIRMATION=emails/confirmation.html
EMAIL_TEMPLATE_CANCELLATION=emails/cancellation.html

# Bildirim Ayarları
SMS_ENABLED=false
SMS_PROVIDER=netgsm
SMS_USERNAME=your-sms-username
SMS_PASSWORD=your-sms-password

# Zaman Dilimi
TIMEZONE=Europe/Istanbul

# Debug Modu (Geliştirme için)
DEBUG=true
APP_ENV=development 